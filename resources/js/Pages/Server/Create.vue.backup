    if (form.plan === 'free') return '0';
    
    const plan = plans.find(p => p.value === form.plan);
    const monthOption = months.find(m => m.value === form.months);
    
    if (!plan || !monthOption) return '0';
    
    const monthlyPrice = parseInt(plan.price.replace(/,/g, ''));
    const discount = monthOption.discount / 100;
    const totalMonths = monthOption.value;
    
    const discountedPrice = monthlyPrice * (1 - discount);
    const totalPrice = discountedPrice * totalMonths;
    
    return totalPrice.toLocaleString();
};

const calculateDiscount = () => {
    if (form.plan === 'free') return '0';
    
    const plan = plans.find(p => p.value === form.plan);
